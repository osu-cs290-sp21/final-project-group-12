<section class="cartItem-container">

    <div class="cart-img-container" >
        <img class="cart-item-img" id="cart-item-img" src="{{img}}"/>
    </div>
    
    <div class="cart-description" >
        <p class="cart-item-name" id="cart-item-title">
            {{title}}
        </p>
    </div>

    <div>              
        <p class="cart-item-price-desc" id="cat-item-price-desc">
            {{priceDescription}}
        </p>
    </div>

    <div>
        <p class="cart-item-price" id="cat-item-price">
            {{price}}
        </p>
    </div>

    <div>
        <p class="cart-item-price-uint" id="cat-item-price-unit">
            {{priceUnit}}
        </p>
    </div>

    <div>
        <p class="cart-item-quantity" id="cart-item-quantity"></p>
        {{amount}}
    </div>

</section>